{{#ui-sidebar class=class id="main-sidebar" dimPage=true closable=true context=".application" as |execute|}}
<div class="header">Pix Editor</div>
{{#ui-accordion class="inverted"}}
  {{#each areas as |area|}}
  <div class="title">
    <i class="dropdown icon"></i>
    {{area.name}}
  </div>
  <div class="content">
    {{#each area.competences as |competence|}}
      {{#link-to "competence" competence.id class="item" invokeAction=(action execute 'hide')}}{{competence.name}}{{/link-to}}
    {{/each}}
  </div>
  {{/each}}
{{/ui-accordion}}
<div class="ui labelled icon menu">
<a class="item" onclick={{action openConfiguration}}><i class="wrench icon"></i>Configuration</a>
<div class="right item">
  {{#if author}}
    {{author}} -
  {{/if}}
   Version {{version}}</div>
</div>
{{/ui-sidebar}}